

$border
  background $white
  border 1px solid $line-clr 
  border-radius 3px
  padding 20px 10px

$oneline
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
  
$tags
  margin 3px 2px
  padding 0.5rem 0.825rem
  display inline-block
  line-height 1.825rem
  font-size 0.825rem
  border 1px solid  $border-clr 
  border-radius 999em 
  transition all .2s ease
  &:visited,&:active,&:link
    color $black 
  &:hover
    background rgba(255,255,255,.2)
    color $thr-clr
    border 1px solid $thr-clr    
   

        
$toRight
    position relative
    cursor pointer
    &:hover 
        color $thr-clr  
    &::after
        content " "
        width 0
        height 1.5px
        background $thr-clr
        position absolute
        top 99%
        right 0
        transition all .4s                
    &:hover:after     
        left 0
        width  100%

$tips
  position relative 
  &:hover:before,&:hover:after  
    position absolute  
    animation-fill-mode forwards
    animation-name tipsAnimation
    animation-duration .2s 
  &:hover:before
    content ' '
    border 8px solid transparent
    border-top 8px solid #565656 
    top -30% 
    left 50%
    margin-left -4px
    margin-top -2px
    width 0
    height 0
  &:hover:after    
    content attr(data-hover) 
    bottom 130% 
    left 50%
    padding 8px 6px
    width 160px
    margin-left -80px
    font-size 16.5px
    box-sizing border-box
    color #fafafa !important
    background #565656
    text-shadow 0 -1px 0 rgba(0,0,0,1)    
    border-radius 4px 
    text-align center

$tips-min 
    @extends $tips 
    &:hover:before   
      border 6px solid transparent
      border-top 6px solid #565656 
      margin-left -3px  
    &:hover:after
      width 88px
      margin-left -44px
      font-size 16px

   
@keyframes tipsAnimation
    0%
        transform translateY(8px) 
        opacity .9  
    100%
        transform translateY(0) 
        opacity 1